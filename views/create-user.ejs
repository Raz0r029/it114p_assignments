<%- include('includes/head.ejs') %>
</head>

<body>
    <%- include('includes/nav.ejs') %>
    <section class="section">
        <div class="container">
            <div>
                <form class="user-form" action="create-user" method="POST">
                    <div class="field">
                        <label class="label">Enter a Username</label>
                        <div class="control has-icons-left has">
                            <input class="input is-medium" type="text" placeholder="Username" name="username">
                            <span class="icon is-small is-left">
                                <i class="mdi mdi-24px mdi-account"></i>
                            </span>
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Enter a Password</label>
                        <div class="control has-icons-left">
                            <input class="input is-medium" type="password" placeholder="Password" name="password">
                            <span class="icon is-small is-left">
                                <i class="mdi mdi-24px mdi-lock-plus"></i>
                            </span>
                        </div>
                    </div>
                    <div class="field is-grouped">
                        <div class="control">
                            <button class="button is-link" type="submit">Create</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <%- include('includes/scripts.ejs') %>
</body>

</html>